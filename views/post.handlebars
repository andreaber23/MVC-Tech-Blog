<body>
  <div class="flex-column justify-space-around">
    <header>
    </header>

    <main class="container container-fluid mt-5">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">{{title}}</h2>
          <p class="card-text"><small>Posted by {{user.name}} on {{format_date date_created}}</small></p>
          <hr>
          <p class="card-text">{{content}}</p>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-md-12">
          <h3>Comments</h3>
          {{#each comments as |comment|}}
          <div class="card mb-3">
            <div class="card-body">
              <p class="card-text">{{comment.text}}</p>
              <p class="card-text"><small>Comment by {{comment.user.name}} on {{format_date comment.date_created}}</small></p>
            </div>
          </div>
          {{/each}}

          {{#if logged_in}}
          <form class="form comment-form" id="comment-form" data-id="{{id}}">
            <div class="form-group">
              <label for="comment-text">Leave a comment:</label>
              <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
          {{else}}
          <p>To comment, please <a href="/login">login</a> or <a href="/signup">create an account</a>.</p>
          {{/if}}

        </div>
      </div>
    </main>

    <footer>
      
    </footer>
  </div>

  <script src="/js/post.js"></script>
</body>

</html>